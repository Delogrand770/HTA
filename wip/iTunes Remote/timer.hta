<html>
<head><title>Created by Gavin Delphia</title>
<!--<link rel=StyleSheet href="xcss.css" type="text/css">-->
<script>var xdev = 0;</script>
<script src="gaia.js"></script>
<style>
body{
  font-size: 11;
  padding: 0;
  margin: 0;
  overflow: hidden;
  font-family:arial,sans-serif;
}
</style>
<script>
if (xdev!=1){
	alert('Please extract all files before running');
	window.close();
}
XU.ResizeWindow(225,400);
var iTunesApp = new ActiveXObject("iTunes.Application");
var iTunes = {
	endtime:0,
	Stop:function(){
		iTunesApp.Stop();
	},
	Ini:function(){
		iTunes.endtime = prompt('Enter time in minutes',60);
		iTunes.endtime = Math.round(iTunes.endtime*60);
		XI.New('mainarea','appinfo','1:1','200:400',1);
		XI.Title('appinfo','iTunes Shutoff Timer');
		XU.CenterElement('appinfo','b');
		XI.Fill('appinfo','iTunes Shutoff Timer','<center>'+Math.round(iTunes.endtime/60)+' minutes remain</center>');
		setInterval("iTunes.CountDown()",1000);
	},
	CountDown:function(){
		iTunes.endtime -=1;
		XI.Fill('appinfo','iTunes Shutoff Timer','<center>'+Math.round(iTunes.endtime/60)+' minutes remain</center>');
		if (iTunes.endtime <=0){
			iTunes.Stop();
			window.close();
		}
	}
};

</script>
</head>
<body onload="iTunes.Ini();" bgcolor="black">
<HTA:APPLICATION ID="app"
    APPLICATIONNAME="app"
    BORDER="normal"
    BORDERSTYLE="normal"
    CAPTION="yes"
    ICON="ico.ico"
    SCROLL="no"
    MAXIMIZEBUTTON="no"
    MINIMIZEBUTTON="yes"
    INNERBORDER="no"
    CONTEXTMENU="no"
    SINGLEINSTANCE="yes"
    WINDOWSTATE="normal"
    SYSMENU="yes"
    SHOWINTASKBAR="yes"
    SCROLLFLAT="yes"
    NAVIGABLE="no"
    SELECTION="no">

<span id='mainarea'></span>

</body>
</html>