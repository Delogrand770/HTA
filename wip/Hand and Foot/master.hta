var discard = new Array();
var players = new Array();
var deckidx = 0;
var Game = {
	Ini:function(){
		XL.Ini();
		XM.Ini();
		deck.shuffle(400);
		deckidx    = 0;
		players[0] = new Game.Player();
		players[0].Deal(11);
		alert(players[0].hand);
	},
	Player:function(){
		this.hand  = new Array();
		this.foot  = new Array();
		this.state = 1; //0 disable, 1 hand, 2 foot
		
		this.Deal = function(it){
			for (var i=0;i<=it;i++){
				if (this.state == 1 && this.hand.length<11){
					this.hand[this.hand.length] = deck[deckidx];
					deckidx++;
				}else if (this.state == 2 && this.hand.length<11){
					this.foot[this.hand.length] = deck[deckidx];
					deckidx++;
				}
			}
		}
	}
};
